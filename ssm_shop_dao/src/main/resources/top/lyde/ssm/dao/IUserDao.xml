<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lyde.ssm.dao.IUserDao">
    <select id="findAll"  resultType="User">
        select `id`,`email`, `username`, `password`, `phoneNum`, `status` from `user`
    </select>
    <insert id="save" parameterType="User" >
        <!-- 配置插入操作后，获取插入数据的id 并更新i值-->
        <selectKey keyProperty="id" keyColumn="id" resultType="int" order="AFTER">
            select last_insert_id();
        </selectKey>
        INSERT INTO `user` (`email`, `username`, `password`, `honeNum`, `status`)
             VALUES (#{email}, #{username}, #{password}, #{honeNum}, #{status});
    </insert>
    <select id="findById"  resultType="User">
        select `id`,`email`, `username`, `password`, `honeNum`, `status` from `user` where id =#{id}
    </select>
</mapper>